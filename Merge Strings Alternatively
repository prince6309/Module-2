import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
       Scanner sc=new Scanner(System.in);
        String a=sc.next();
        String b=sc.next();
        String c="";
            for(int i=0;i<a.length();i++){
                c +=a.charAt(i);
                c +=b.charAt(i);
            }
        System.out.println(c);
    }
}
